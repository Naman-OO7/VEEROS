<?xml version="1.0" encoding="utf-8"?>


<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayoutNew"
    tools:openDrawer="start">






    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            tools:context=".main_page">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">


                <Button
                    android:id="@+id/btn1"

                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70sp"
                    android:layout_marginTop="290sp"
                    android:background="@drawable/design2"
                    android:text="Level 1"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="40sp"


                    />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70sp"
                    android:layout_marginTop="390sp"
                    android:background="@drawable/design2"
                    android:elevation="0sp"
                    android:text="Level 2"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="40sp"


                    />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70sp"
                    android:layout_marginTop="490sp"
                    android:background="@drawable/design2"
                    android:text="Level 3"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="40sp"


                    />


            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="630sp"
                android:layout_marginRight="20sp"

                android:visibility="visible"
                app:cardCornerRadius="30sp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_marginTop="15sp"
                            android:layout_marginLeft="30sp"
                            android:src="@mipmap/ic_people"
                            />

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_marginTop="15sp"
                            android:layout_marginLeft="78sp"
                            android:src="@mipmap/ic_people"
                            />

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_marginTop="15sp"
                            android:layout_marginLeft="80sp"
                            android:src="@mipmap/ic_people"
                            />




                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>


    </ScrollView>



</androidx.drawerlayout.widget.DrawerLayout>


